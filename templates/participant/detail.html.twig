{% extends 'base.html.twig' %}

{% block title %}Participant{% endblock %}

{% block body %}
    <h1>Profil de {{ participant.pseudo }}</h1>

    <table class="table">
        <tbody>
        <tr>
            <th>Image</th>
            <td>
                <img src="{{ asset('image/' ~ participant.filename) }}" alt="Image de profil" width="150" height="150">
            </td>
        </tr>
            <tr>
                <th>Id</th>
                <td>{{ participant.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ participant.nom }}</td>
            </tr>
            <tr>
                <th>Prenom</th>
                <td>{{ participant.prenom }}</td>
            </tr>
            <tr>
                <th>Telephone</th>
                <td>{{ participant.telephone }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ participant.email }}</td>
            </tr>
            <tr>
                <th>Pseudo</th>
                <td>{{ participant.pseudo }}</td>
            </tr>
            <tr>
                <th>Administrateur</th>
                <td>{{ participant.administrateur ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Actif</th>
                <td>{{ participant.actif ? 'Yes' : 'No' }}</td>
            </tr>

        </tbody>
    </table>
    {% if participant.id == app.user.id%}
        <a href="{{ path('participant_update', {'id': participant.id}) }}" class="btn btn-primary">Modifier mon profil</a>
    {#{{ include('participant/_delete_form.html.twig') }}  #}

    {% endif %}

    {#<a href="{{ path('sortie_liste') }}">Retour Ã  la liste des sorties</a>#}

    {#<a href="{{ path('participant_detail', {'id': participant.id}) }}">edit</a>#}

{% endblock %}
